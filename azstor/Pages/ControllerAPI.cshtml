@page
@model ControllerAPIModel
@{
    ViewData["Title"] = "Call Controller API Process";
}
<h1>@ViewData["Title"]</h1>


<div class="card justify-content-center" style="width: 50rem">
    <div class="card-header">
        This page records details of your goot time!
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <label for="baseUrl">@Model.apiBase</label>
            <input type="text" asp-for="APIRoute" placeholder="Cocktail"><br>
            <br>            
            <label for="thisItem.Name">Event Name: </label>
            <input type="text" asp-for="thisItem.Name" placeholder="Cocktail"><br>
            <br>
            <br>
            <input type="file" asp-for="Upload" />
            <br>
            <br>
            <button>Call API</button>
        </form>
    </div>

    <div class="card-body">
        <p> This is the message from the API: <b> @Model.myAPIMessage </p>
    </div>

</div>
